@model BsmWebApp.ViewModels.Changes.GriaBudgetViewModel

    <div>
        <div class="row">
            <div class="col-md-2">
                <label class="TextBold"> שם המתקן:</label>
            </div>
            <div class="col-md-6">
                @Html.DropDownListFor(m => Model.Yechida.KodYechida, Model.Yechidot, new { @id = "KodMitkan", @onchange = "EnableFields();CheckAmount();", @class = "ddl", style = "width: 350px;height: 29px;" })
            </div>
            <div class="col-md-1">
                <label class="TextBold"> כמות:</label>
            </div>
            <div class="col-md-2">      
                <input id="inputKamut"  onblur="CheckAmount('input');" disabled="disabled" onfocus="OnFocus(this);"    class="styleTBSearch GeneralText TextBoxRO AmountInput" />
            </div>
            <div class="col-md-1">
               
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-md-2">
                <label class="TextBold"> הנמקה:</label>
            </div>
            <div class="col-md-10">
                <textarea id="inputReson" disabled="disabled" placeholder='רשום הנמקה לגריעת תקציב ...' style="width:700px;height:120px" maxlength="200" spellcheck="false" autofocus></textarea>
            </div>

        </div>
        <br />
        <br />

    @*</div>*@

<div style="float:left">
    <button id="btnGria" value="עדכן תקציב" style="width:100px" class="PurpleButton" onclick="ReductionBudgetAjax();">עדכן תקציב</button>
</div>

<script>

    $(document).ready(function () {
        $("#inputKamut").mask('09999.9', { placeholder: "" });

        $('#KodMitkan option').each(function (i, item) {
            if (item.text.indexOf(')') > -1) {
                var split = item.text.split(')')[0].split(' ');
                var num = split[split.length - 1];
                if (+num == 0)
                    item.disabled = true;
            }
            else {
                if (item.value != 0)
                    item.disabled = true;
            }
        });
    });

    function OnFocus(obj) {
        var kamut = $("#inputKamut").val();
        $("#inputKamut").val(kamut.replace("-",""));
        obj.select();
    }
    function EnableFields() {
        var selectMitkan = $('#KodMitkan')[0].selectedIndex;

        if (selectMitkan != 0) {
            $("#inputKamut").prop('disabled', false);
            $("#inputReson").prop('disabled', false);
        }
        else {
            $("#inputKamut").prop('disabled', true);
            $("#inputReson").prop('disabled', true);
        }

    }

    function CheckAmount(src) {
        var kamut = getKamut();// $("#inputKamut").val();
     //   debugger;
       // if (kamut.indexOf("-") > -1)
        //    kamut = kamut.split('-')[0];
        if (kamut != "") {
           // var selectTakziv = $('#KodMitkan')[0].selectedIndex;
            var takziv = $("#KodMitkan option:selected").text();
            var split = takziv.split(')')[0].split(' ');
            var num = split[split.length - 1];

            if (+kamut > +num) {
                // $("#btnGria").prop('disabled', true);
                if(src =="")
                    AlertMessage("לא ניתן לעדכן מעבר ליתרה", 150, 300);
                return false;
            }
          //  else {
                if (src != "")
                    $("#inputKamut").val(kamut + "-");
               return true;
               // $("#btnGria").prop('disabled', false);
           // }
        }


    }
    function ReductionBudgetAjax() {
        debugger;
        if (InsertAllFields()) {
            if (CheckAmount("")) {
                var selectMitkan = $('#KodMitkan')[0].value;
                var inputReson = $("#inputReson").val();
                var kamutVal = getKamut();// $("#inputKamut").val();

                var data = { Mitkan: selectMitkan, Kamut: kamutVal, Comment: inputReson };
                $.post("/Changes/ReductionBudget", data, function (res) {
                    AlertMessage("נתונים עודכנו בהצלחה", 150, 300);
                    RefreshGridChanges();
                    $("#dialog-change").dialog("close");
                });
            }
        }
        else {
            AlertMessage("חובה לעדכן את כל השדות", 150, 300);
            return false;
        }
    }

    function InsertAllFields() {
        var selectMitkan = $('#KodMitkan')[0].selectedIndex;
        var inputReson = $("#inputReson").val();
        var kamut = getKamut();//$("#inputKamut").val();
       
        if (selectMitkan == 0 || inputReson == "" || kamut == "" || +kamut == 0) {
            return false;
        }
        else {
            return true;
           // AddBudgetNew(@Html.Raw(Json.Encode(Model)) );
        }
    }

    function getKamut() {
        var kamut = $("#inputKamut").val();
        //  debugger;
        if (kamut.indexOf("-") > -1)
            kamut = kamut.split('-')[0];

        return kamut;
    }
</script>